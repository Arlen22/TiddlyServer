{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "test"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "declaration": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "keyofStringsOnly": true,
    "allowJs": true
  },
  "files": [
    "./src/server.ts"
  ],
  // "include": ["./preflighter.ts", "./assets/**/*", "./server.ts", "src/*", "test/*"],
  "exclude": [
    "node_modules",
    "new-server",
    "archive",
    "static",
    "./assets/static"
  ]
}