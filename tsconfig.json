{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "test"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": false,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "declaration": true,
  },
  "files": [
    "./server.ts"
  ],
  // "include": ["./preflighter.ts", "./assets/**/*", "./server.ts", "src/*", "test/*"],
  "exclude": [
    "node_modules",
    "new-server",
    "archive",
    "static",
    "./assets/static"
  ]
}