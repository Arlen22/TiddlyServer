{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src/",
    "rootDirs": ["./src/", "./test/"],
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "declaration": false
  },
  "files": ["./server.ts"],
  "include": ["./preflighter.ts", "./assets/**/*", "./server.ts", "src/", "test/*"],
  "exclude": [
    "**/*/node_modules",
    "node_modules",
    "new-server",
    "archive",
    "static",
    "./assets/static"
  ]
}
