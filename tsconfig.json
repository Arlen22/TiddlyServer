{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "rootDirs": ["src", "test"],
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true
  },
  "include": ["./preflighter.ts", "./server.ts", "src/*", "test/*"],
  "exclude": [
    "node_modules",
    "new-server",
    "archive",
    "static",
    "./assets/static"
  ]
}
