{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceRoot}/server.ts",
            "outFiles": [
                "${workspaceRoot}/**/*.js"
            ],
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server (skip libs)",
            "program": "${workspaceRoot}/server.ts",
            "smartStep": true,
            "outFiles": [
                "${workspaceRoot}/**/*.js"
            ],
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceRoot}/node_modules/**/*.js",
                "${workspaceRoot}/lib/rxjs/**/*.js",
                "${workspaceRoot}/operators/**/*.js"
            ],
            "protocol": "inspector"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Server (skip libs)(Chrome)",
            "program": "${workspaceRoot}/server.ts",
            "smartStep": true,
            "outFiles": [
                "${workspaceRoot}/**/*.js"
            ],
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceRoot}/node_modules/**/*.js",
                "${workspaceRoot}/lib/rxjs/**/*.js",
                "${workspaceRoot}/operators/**/*.js"
            ],
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tiddly",
            "program": "${workspaceRoot}/tiddly.ts",
            "outFiles": [
                "${workspaceRoot}/**/*.js"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tiddly (skip libs)",
            "program": "${workspaceRoot}/tiddly.ts",
            "smartStep": true,
            "outFiles": [
                "${workspaceRoot}/**/*.js"
            ],
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceRoot}/node_modules/**/*.js",
                "${workspaceRoot}/lib/rxjs/**/*.js",
                "${workspaceRoot}/operators/**/*.js"
            ],
            "protocol": "inspector"
        }
    ]
}