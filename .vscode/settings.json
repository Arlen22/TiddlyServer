// Place your settings in this file to overwrite default and user settings.
{
	"files.exclude": {
		"**/*.js": {
			"when": "$(basename).ts"
		},
		"**/*.map": {
			"when": "$(basename)"
		},
		"node_modules": true
	},
	"explorer.sortOrder": "default",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "typescript.tsdk": "node_modules/typescript/lib"
}